{
    "type": "object",
    "properties": {
        "date": {
            "type": ["string", "null"],
            "format": "date",
            "description": "The date of the report"
        },
        "campaignName": {
            "type": ["string", "null"],
            "description": "The name of the campaign"
        },
        "campaignId": {
            "type": ["string", "null"],
            "description": "The unique identifier of the campaign"
        },
        "campaignStatus": {
            "type": ["string", "null"],
            "enum": ["ENABLED", "PAUSED", "ARCHIVED"],
            "description": "The status of the campaign"
        },
        "campaignBudgetAmount": {
            "type": ["number", "null"],
            "description": "The budget amount set for the campaign"
        },
        "campaignBudgetType": {
            "type": ["string", "null"],
            "description": "The type of budget for the campaign"
        },
        "campaignBudgetCurrencyCode": {
            "type": ["string", "null"],
            "description": "The currency code for the campaign budget"
        },
        "impressions": {
            "type": ["integer", "null"],
            "description": "Number of times your ads were shown"
        },
        "clicks": {
            "type": ["integer", "null"],
            "description": "Number of clicks on your ads"
        },
        "cost": {
            "type": ["number", "null"],
            "description": "Total cost of advertising (spend)"
        },
        "costPerClick": {
            "type": ["number", "null"],
            "description": "Average cost per click"
        },
        "clickThroughRate": {
            "type": ["number", "null"],
            "description": "Click-through rate (CTR)"
        },
        "purchases14d": {
            "type": ["integer", "null"],
            "description": "Number of purchases within 14 days of ad interaction"
        },
        "sales14d": {
            "type": ["number", "null"],
            "description": "Sales value within 14 days of ad interaction"
        },
        "unitsSoldClicks14d": {
            "type": ["integer", "null"],
            "description": "Units sold within 14 days of clicks"
        },
        "topOfSearchImpressionShare": {
            "type": ["number", "null"],
            "description": "Share of impressions in top of search results"
        }
    },
    "required": [
        "campaignId",
        "date",
        "cost"
    ]
} 